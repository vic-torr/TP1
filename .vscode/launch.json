{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/ligador/bin/ligador",
            "args": ["${workspaceFolder}/ligador/validation/out_ex_main.o",
                     "${workspaceFolder}/ligador/validation/out_ex_func.o"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/ligador/validation/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "justMyCode": true,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}